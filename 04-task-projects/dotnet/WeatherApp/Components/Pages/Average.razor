@page "/average"
@using System.Collections.Generic

<PageTitle>Average Temperature</PageTitle>

<h1>Average Temperature</h1>

<p>The average temperature for the next three days is: @_averageTemperature</p>

@code {
    private double _averageTemperature;

    protected override void OnInitialized()
    {
        double currentTemperature = 20; // in degrees Celsius
        double rateOfChange = -1; // in temperature per day

        _averageTemperature = CalculateAverageTemperature(currentTemperature, rateOfChange);
    }

    /// <summary>
    /// Calculates the average temperature over three days based on the current temperature and the rate of change.
    /// </summary>
    /// <param name="currentTemperature">The current temperature.</param>
    /// <param name="rateOfChange">The rate of change in temperature per day.</param>
    /// <returns>The average temperature over three days.</returns>
    private double CalculateAverageTemperature(double currentTemperature, double rateOfChange)
    {
        double day1Temperature = currentTemperature + rateOfChange;
        double day2Temperature = day1Temperature + rateOfChange;
        double day3Temperature = day2Temperature + rateOfChange;

        return (day1Temperature + day2Temperature + day3Temperature) / 3;
    }
}